<%= form_with model: @book, url: "/articles/create" do |form| %>
	<div>
		<%= form.label :name %> <br>
		<%= form.text_field :name %>
	</div>

	<div>
		<%= form.label :description %> <br>
		<%= form.text_field :description %>
	</div>

	<div>
		<%= form.submit "Save" %>
	</div>

	<% end %>